  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control width-auto", placeholder: "Name" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control width-auto", placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control width-auto", placeholder: "Phone" %>
  </div>

  <div>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
